@page "/market"
@attribute [StreamRendering]
@rendermode InteractiveServer
@inject IEsiApiService EsiApi
@inject ISdeUniverseService SdeUniverse
@inject IEveAuthenticationService AuthService
@inject ILogger<Market> Logger
@using WALLEve.Models.Esi.Markets
@using WALLEve.Models.Wallet

<PageTitle>EVE Companion - Markt</PageTitle>

<link rel="stylesheet" href="css/wallet.css" />

<div class="wallet-page">
    @if (_isLoading && _activeTab == "orders")
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Lade Marktdaten...</p>
        </div>
    }
    else if (!_isAuthenticated && _activeTab == "orders")
    {
        <div class="not-authenticated">
            <h2>Nicht angemeldet</h2>
            <p>Du musst dich anmelden, um deine Marktdaten zu sehen.</p>
            <a href="/" class="button">Zur Anmeldung</a>
        </div>
    }
    else
    {
        <div class="wallet-header">
            <h1>üìä Markt</h1>
            <div class="wallet-summary">
                <div class="summary-item">
                    <span class="label">Aktive Orders</span>
                    <span class="value">@_activeOrders.Count</span>
                </div>
            </div>
        </div>

        <!-- Tab Navigation -->
        <div class="tab-navigation">
            <button class="tab-button @(_activeTab == "orders" ? "active" : "")"
                    @onclick='() => SwitchTab("orders")'>
                üìã Meine Orders
            </button>
            <button class="tab-button @(_activeTab == "data" ? "active" : "")"
                    @onclick='() => SwitchTab("data")'>
                üìà Marktdaten
            </button>
            <button class="tab-button @(_activeTab == "finder" ? "active" : "")"
                    @onclick='() => SwitchTab("finder")'>
                üîç Market Finder
            </button>
        </div>

        <!-- Tab Content -->
        <div class="tab-content">
            @if (_activeTab == "orders")
            {
                <!-- Meine Orders Tab -->
                <div class="wallet-content">
                    @if (_activeOrders.Any())
                    {
                        <div class="transactions-list">
                            @foreach (var order in _activeOrders)
                            {
                                <div class="transaction-item">
                                    <div class="transaction-main">
                                        <div class="transaction-icon">@(order.IsBuyOrder ? "üì•" : "üì§")</div>
                                        <div class="transaction-info">
                                            <div class="transaction-type">@(order.IsBuyOrder ? "Kauforder" : "Verkaufsorder")</div>
                                            <div class="transaction-item-name">@GetTypeName(order.TypeId)</div>
                                        </div>
                                        <div class="transaction-amount positive">
                                            @order.Price.FormatIsk() ISK
                                        </div>
                                        <div class="transaction-description">
                                            @order.VolumeRemain / @order.VolumeTotal
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="no-transactions">
                            <p>Keine aktiven Market Orders.</p>
                        </div>
                    }

                    <div class="refresh-section">
                        <button class="refresh-button" @onclick="LoadMarketDataAsync" disabled="@_isRefreshing">
                            @if (_isRefreshing)
                            {
                                <span class="spinner-small"></span>
                                <span>Aktualisiere...</span>
                            }
                            else
                            {
                                <span>üîÑ Daten aktualisieren</span>
                            }
                        </button>
                    </div>
                </div>
            }
            else if (_activeTab == "data")
            {
                <!-- Marktdaten Tab -->
                <WALLEve.Components.Market.MarketDataView />
            }
            else if (_activeTab == "finder")
            {
                <!-- Market Finder Tab -->
                <WALLEve.Components.Market.MarketFinderView />
            }
        </div>
    }
</div>

<style>
    .tab-navigation {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid var(--border-color);
        padding: 0 1rem;
    }

    .tab-button {
        padding: 0.75rem 1.5rem;
        background: none;
        border: none;
        border-bottom: 3px solid transparent;
        color: var(--text-secondary);
        cursor: pointer;
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.2s;
        position: relative;
        bottom: -2px;
    }

    .tab-button:hover {
        color: var(--text-primary);
        background: rgba(255, 255, 255, 0.05);
    }

    .tab-button.active {
        color: var(--primary-color);
        border-bottom-color: var(--primary-color);
    }

    .tab-content {
        padding: 0 1rem;
    }

    .market-data-placeholder {
        padding: 2rem;
        text-align: center;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
    }

    .market-data-placeholder h2 {
        color: var(--text-primary);
        margin-bottom: 1rem;
    }

    .market-data-placeholder ul {
        text-align: left;
        max-width: 500px;
        margin: 1rem auto;
        color: var(--text-secondary);
    }

    .market-data-placeholder .info {
        margin-top: 1.5rem;
        color: var(--primary-color);
        font-style: italic;
    }
</style>

@code {
    private bool _isLoading = true;
    private bool _isRefreshing;
    private bool _isAuthenticated;
    private List<MarketOrder> _activeOrders = new();
    private Dictionary<int, string> _typeNames = new();
    private string _activeTab = "orders";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthService.GetAuthStateAsync();
        _isAuthenticated = authState?.IsValid == true;

        if (_isAuthenticated)
        {
            await LoadMarketDataAsync();
        }
        else
        {
            _isLoading = false;
        }
    }

    private void SwitchTab(string tabName)
    {
        _activeTab = tabName;
    }

    private async Task LoadMarketDataAsync()
    {
        if (_isRefreshing) return;

        _isRefreshing = true;
        _isLoading = true;

        try
        {
            var authState = await AuthService.GetAuthStateAsync();
            if (authState?.CharacterId == null) return;

            _activeOrders = await EsiApi.GetMarketOrdersAsync(authState.CharacterId) ?? new List<MarketOrder>();

            // Load type names
            var sdeAvailable = await SdeUniverse.IsDatabaseAvailableAsync();
            if (sdeAvailable)
            {
                foreach (var order in _activeOrders)
                {
                    if (!_typeNames.ContainsKey(order.TypeId))
                    {
                        var name = await SdeUniverse.GetTypeNameAsync(order.TypeId);
                        _typeNames[order.TypeId] = name ?? $"Type {order.TypeId}";
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading market data");
        }
        finally
        {
            _isLoading = false;
            _isRefreshing = false;
        }
    }

    private string GetTypeName(int typeId)
    {
        return _typeNames.TryGetValue(typeId, out var name) ? name : $"Type {typeId}";
    }
}
