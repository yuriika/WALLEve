@using WALLEve.Models.Wallet
@using WALLEve.Extensions

<div class="transactions-list">
    @foreach (var entry in Entries)
    {
        <div class="transaction-item @(entry.IsExpanded ? "expanded" : "")"
             @onclick="() => ToggleEntry(entry.Id)">

            <!-- Main Row -->
            <div class="transaction-main">
                <div class="transaction-icon">@entry.IconEmoji</div>

                <div class="transaction-info">
                    <div class="transaction-type">@entry.TransactionTypeDisplay</div>
                    @if (entry.ItemName != null)
                    {
                        <div class="transaction-item-name">@entry.ItemName</div>
                    }
                    else
                    {
                        <div class="transaction-description">@entry.Description</div>
                    }
                </div>

                <div class="transaction-amount @(entry.Amount >= 0 ? "positive" : "negative")">
                    @(entry.Amount >= 0 ? "+" : "")@entry.FormattedAmount ISK
                </div>

                <div class="transaction-date">
                    @entry.Date.ToString("dd.MM.yyyy HH:mm")
                </div>

                <div class="expand-icon">
                    @(entry.IsExpanded ? "â–¼" : "â–¶")
                </div>
            </div>

            <!-- Expanded Details -->
            @if (entry.IsExpanded)
            {
                <div class="transaction-details">
                    <div class="details-grid">
                        <div class="detail-item">
                            <span class="label" title="Kontostand nach dieser Transaktion">Kontostand</span>
                            <span class="value">@entry.FormattedBalance ISK</span>
                        </div>

                        @if (entry.TransactionDetails != null)
                        {
                            <div class="detail-item">
                                <span class="label" title="Kauft oder verkauft">Typ</span>
                                <span class="value">@(entry.TransactionDetails.IsBuy ? "Kauf" : "Verkauf")</span>
                            </div>
                            <div class="detail-item">
                                <span class="label" title="Anzahl der gehandelten Items">Menge</span>
                                <span class="value">@entry.TransactionDetails.Quantity.ToString("N0")</span>
                            </div>
                            <div class="detail-item">
                                <span class="label" title="Preis pro Einheit">StÃ¼ckpreis</span>
                                <span class="value">@entry.TransactionDetails.FormattedUnitPrice ISK</span>
                            </div>
                            <div class="detail-item">
                                <span class="label" title="Gesamtpreis (Menge Ã— StÃ¼ckpreis)">Gesamt</span>
                                <span class="value">@entry.TransactionDetails.FormattedTotalPrice ISK</span>
                            </div>
                        }

                        @if (entry.Tax.HasValue && entry.Tax.Value > 0)
                        {
                            <div class="detail-item tax-breakdown">
                                <span class="label" title="Steuern, die bei dieser Transaktion bezahlt wurden">Steuern</span>
                                <span class="value tax-amount">@entry.Tax.Value.FormatIsk() ISK</span>
                            </div>
                        }

                        @* Show related transaction/tax depending on entry type *@
                        @if (entry.RelatedTransaction != null && entry.RefType == "transaction_tax")
                        {
                            <div class="related-transaction">
                                <div class="related-header">
                                    <span class="label">ðŸ”— Verbundene Transaktion</span>
                                </div>
                                <div class="related-content">
                                    <div class="related-info">
                                        <span class="related-type">@entry.RelatedTransaction.TransactionTypeDisplay</span>
                                        @if (entry.RelatedTransaction.ItemName != null)
                                        {
                                            <span class="related-item">@entry.RelatedTransaction.ItemName</span>
                                        }
                                        else
                                        {
                                            <span class="related-description">@entry.RelatedTransaction.Description</span>
                                        }
                                    </div>

                                    <div class="related-details-grid">
                                        <div class="detail-item">
                                            <span class="label" title="Bruttobetrag der Transaktion (ohne Steuern)">Transaktionsbetrag (Brutto)</span>
                                            <span class="value">@entry.RelatedTransaction.FormattedAmount ISK</span>
                                        </div>

                                        <div class="detail-item">
                                            <span class="label" title="Steuerbetrag, der fÃ¼r diese Transaktion bezahlt wurde">Steuern</span>
                                            <span class="value tax-amount">@entry.FormattedAmount ISK</span>
                                        </div>

                                        <div class="detail-item">
                                            <span class="label" title="Was dem Spieler nach Abzug der Steuern tatsÃ¤chlich bleibt">Nettobetrag</span>
                                            <span class="value @(entry.NetAmount >= 0 ? "positive" : "negative")">
                                                @entry.FormattedNetAmount ISK
                                            </span>
                                        </div>

                                        @if (entry.RelatedTransaction.TransactionDetails != null)
                                        {
                                            <div class="detail-item">
                                                <span class="label" title="Anzahl der gehandelten Items">Menge</span>
                                                <span class="value">@entry.RelatedTransaction.TransactionDetails.Quantity.ToString("N0")</span>
                                            </div>
                                            <div class="detail-item">
                                                <span class="label" title="Preis pro Einheit">StÃ¼ckpreis</span>
                                                <span class="value">@entry.RelatedTransaction.TransactionDetails.FormattedUnitPrice ISK</span>
                                            </div>
                                            <div class="detail-item">
                                                <span class="label" title="Gesamtpreis (Menge Ã— StÃ¼ckpreis)">Gesamt</span>
                                                <span class="value">@entry.RelatedTransaction.TransactionDetails.FormattedTotalPrice ISK</span>
                                            </div>
                                        }
                                    </div>

                                    <div class="related-date">
                                        @entry.RelatedTransaction.Date.ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                </div>
                            </div>
                        }

                        @* Show related tax for market transactions *@
                        @if (entry.RelatedTransaction != null && entry.RefType != "transaction_tax")
                        {
                            <div class="related-transaction">
                                <div class="related-header">
                                    <span class="label">ðŸ’¸ Verbundene Steuer</span>
                                </div>
                                <div class="related-content">
                                    <div class="related-info">
                                        <span class="related-type">@entry.RelatedTransaction.TransactionTypeDisplay</span>
                                        <span class="related-description">@entry.RelatedTransaction.Description</span>
                                    </div>

                                    <div class="related-details-grid">
                                        <div class="detail-item">
                                            <span class="label" title="Bruttobetrag der Transaktion (ohne Steuern)">Transaktionsbetrag (Brutto)</span>
                                            <span class="value">@entry.FormattedAmount ISK</span>
                                        </div>

                                        <div class="detail-item">
                                            <span class="label" title="Steuerbetrag, der fÃ¼r diese Transaktion bezahlt wurde">Steuern</span>
                                            <span class="value tax-amount">@entry.RelatedTransaction.FormattedAmount ISK</span>
                                        </div>

                                        <div class="detail-item">
                                            <span class="label" title="Was dem Spieler nach Abzug der Steuern tatsÃ¤chlich bleibt">Nettobetrag</span>
                                            <span class="value @(entry.NetAmount >= 0 ? "positive" : "negative")">
                                                @entry.FormattedNetAmount ISK
                                            </span>
                                        </div>

                                        <div class="detail-item">
                                            <span class="label" title="Kontostand nach der Steuerzahlung">Kontostand danach</span>
                                            <span class="value">@entry.RelatedTransaction.FormattedBalance ISK</span>
                                        </div>
                                    </div>

                                    <div class="related-date">
                                        @entry.RelatedTransaction.Date.ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                </div>
                            </div>
                        }

                        @* NEW: Transaction Chain View *@
                        <TransactionChainView Entry="@entry" />

                        @* NEW: Related Transactions View *@
                        <RelatedTransactionsView Entry="@entry" />
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public List<WalletEntryViewModel> Entries { get; set; } = null!;

    [Parameter, EditorRequired]
    public EventCallback<long> OnEntryToggled { get; set; }

    private async Task ToggleEntry(long entryId)
    {
        await OnEntryToggled.InvokeAsync(entryId);
    }
}
